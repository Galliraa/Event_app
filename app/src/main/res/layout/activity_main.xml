<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/citySearchET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="150dp"
        android:inputType="textPersonName"
        android:text="Name" />

    <Button
        android:id="@+id/searchLocButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/searchCityButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/searchCityButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/citySearchET"
        android:layout_alignLeft="@+id/searchLocButton"
        android:layout_alignStart="@+id/searchLocButton" />
</RelativeLayout>
